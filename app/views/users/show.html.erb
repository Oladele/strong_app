<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<div>
				<h1><%= @user.name %></h1>
			</div>
			<h1>
				<%= gravatar_for @user, size: 150 %>
			</h1>
		</section>
	</aside>
	<div class= "span4 hero-unit">
		<h2> Progress Chart </h2>
	</div>	
</div>
<div class="row">
	<div class="span16">
		<% if @user.workouts.any? %>
			<h3>Workouts(<%= @user.workouts.count %>)</h3>
			<ol class="workouts">
				<%= render @workouts %>
			</ol>
			<%= will_paginate @workouts %>
		<% end %>
	</div>	
</div>